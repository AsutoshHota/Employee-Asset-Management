    <field name="category_id" ref="base.module_category_human_resources"/>
  </record>

  <record id="employee_asset_rule_employee" model="ir.rule">
    <field name="name">Employee: See Own Assets</field>
    <field name="model_id" ref="model_employee_asset"/>
