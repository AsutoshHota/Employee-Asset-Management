<odoo>
  <!-- Tree View -->
  <record id="view_employee_asset_tree" model="ir.ui.view">
    <field name="name">employee.asset.tree</field>
    <field name="model">employee.asset</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="asset_type"/>
        <field name="serial_number"/>
        <field name="employee_id"/>
        <field name="condition"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Kanban View -->
  <record id="view_employee_asset_kanban" model="ir.ui.view">
    <field name="name">employee.asset.kanban</field>
    <field name="model">employee.asset</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="name"/>
        <field name="asset_type"/>
        <field name="state"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_card">
              <strong><field name="name"/></strong>
              <div>Type: <field name="asset_type"/></div>
              <div>Status: <field name="state"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_employee_asset_form" model="ir.ui.view">
    <field name="name">employee.asset.form</field>
    <field name="model">employee.asset</field>
    <field name="arch" type="xml">
      <form string="Asset">
        <sheet>
          <group>
            <field name="name"/>
            <field name="asset_type"/>
            <field name="serial_number"/>
            <field name="purchase_date"/>
            <field name="condition"/>
            <field name="employee_id"/>
            <field name="assignment_date"/>
            <field name="return_date"/>
            <field name="state" readonly="1"/>
          </group>
          <footer>
            <button name="action_assign" string="Assign" type="object" class="btn-primary"
                    attrs="{'invisible': [('state', 'not in', ['draft', 'returned'])]}"/>
            <button name="action_return" string="Return" type="object" class="btn-secondary"
                    attrs="{'invisible': [('state', '!=', 'assigned')]}"/>
            <button name="action_mark_lost" string="Mark as Lost" type="object" class="btn-danger"
                    attrs="{'invisible': [('state', '=', 'lost')]}"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Actions -->
  <record id="action_employee_asset_all" model="ir.actions.act_window">
    <field name="name">All Assets</field>
    <field name="res_model">employee.asset</field>
    <field name="view_mode">tree,kanban,form</field>
    <field name="context">{}</field>
  </record>

  <record id="action_employee_asset_my" model="ir.actions.act_window">
    <field name="name">My Assets</field>
    <field name="res_model">employee.asset</field>
    <field name="view_mode">tree,kanban,form</field>
    <field name="domain">[('employee_id.user_id','=',uid)]</field>
  </record>
</odoo>
